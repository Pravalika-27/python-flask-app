pipeline {
    agent any

    stages {
        stage('Clone Code') {
            steps {
                git branch: 'main', url: 'https://github.com/bhargavibairagoni/python-flask-app.git'
            }
        }

        stage('Build') {
            steps {
                script {
                    sh '''
		    cd single-server-deployment
                    docker build -t app1 .'   
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    sh 'docker run --rm app1 pytest'
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    sh '''
                    docker run -itd --name cont1 -p 5001:5000 app1
                    echo "Application deployed on http://localhost:5001"
                    '''
                }
            }
        }
    }
}

