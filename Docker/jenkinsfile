pipeline {
    agent any
    environment {
        AWS_ACCOUNT_ID = '905418365089'
        AWS_REGION = 'us-east-1'
        ECR_URL = "${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com"
    }
    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/bhargavibairagoni/python-flask-app.git'
            }
        }
        stage('Run Tests') {
            steps {
                sh 'pytest || true'
            }
        }
        stage('Build Docker Image') {
            steps {
                sh 'docker build -t flask-app ./Docker' 
            }
        }
        stage('Push to ECR') {
            steps {
                withAWS(credentials: 'aws_credentials-us-east-1', region: "${AWS_REGION}") {
                    sh 'aws ecr get-login-password --region us-east-1 --profile default | docker login --username AWS --password-stdin 905418365089.dkr.ecr.us-east-1.amazonaws.com'
                    sh 'docker tag flask-app:latest ${ECR_URL}:latest'
                    sh 'docker push ${ECR_URL}:latest'
                }
            }
        }
        stage('Deploy to ECS') {
            steps {
                withAWS(credentials: 'aws_credentials', region: "${AWS_REGION}") {
                    sh 'aws ecs update-service --cluster python-webapp-cluster --service flask-app-service --force-new-deployment'
                }
            }
        }
    }
}
