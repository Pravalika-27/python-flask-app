pipeline {
    agent any
    environment {
        AWS_REGION = 'us-east-1'
    }
    stages {
        stage('Clone Code') {
            steps {
                git branch: 'main', url: 'https://github.com/bhargavibairagoni/python-flask-app.git'
            }
        }
        stage('Create EKS Cluster') {
            steps {
                script {
                    withCredentials([aws(credentialsId: 'aws_credentials', accessKeyVariable: 'AWS_ACCESS_KEY', secretKeyVariable: 'AWS_SECRET_KEY')]) {
                        sh '''
                        aws configure set aws_access_key_id $AWS_ACCESS_KEY
                        aws configure set aws_secret_access_key $AWS_SECRET_KEY
                        aws configure set region $AWS_REGION
                        if ! eksctl get cluster --name my-cluster --region $AWS_REGION; then
                            eksctl create cluster --name my-cluster --region $AWS_REGION --nodegroup-name my-nodes --nodes 2 --node-type t3.medium --with-oidc --managed
                        else
                            echo "Cluster already exists."
                        fi
                        '''
                    }
                }
            }
        }
        stage('Build & Deploy to EKS') {
            steps {
                script {
                    sh '''
		    cd kubernetes
                    //aws eks update-kubeconfig --name my-cluster --region $AWS_REGION --force-update
                    kubectl apply -f Deployment.yml
                    kubectl apply -f service.yml
                    '''
                }
            }
        }
    }
}
